<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SMART LOCK CONTROL"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ImageView
                    android:id="@+id/imgStatusIcon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@android:drawable/presence_offline"
                    app:tint="#FF5252" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Chưa kết nối"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnConnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kết nối"
                    style="@style/Widget.MaterialComponents.Button.TextButton"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/cardStatus">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bảng điều khiển"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnAddRfid"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Thêm thẻ RFID Mới"
                android:drawableLeft="@android:drawable/ic_input_add"
                android:paddingStart="20dp"
                android:gravity="start|center_vertical"
                android:enabled="true"
                app:backgroundTint="#2196F3"/>

            <Button
                android:id="@+id/btnAddFinger"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Thêm Vân Tay Mới"
                android:drawableLeft="@android:drawable/ic_btn_speak_now"
                android:paddingStart="20dp"
                android:gravity="start|center_vertical"
                android:layout_marginTop="10dp"
                android:enabled="true"
                app:backgroundTint="#4CAF50"/>

            <Button
                android:id="@+id/btnViewList"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Danh Sách Người Dùng"
                android:drawableLeft="@android:drawable/ic_menu_myplaces"
                android:paddingStart="20dp"
                android:gravity="start|center_vertical"
                android:layout_marginTop="10dp"
                android:enabled="true"
                app:backgroundTint="#607D8B"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvLogLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhật ký mở cửa:"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/cardControl"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="#E0E0E0"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvLogLabel"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvMessageLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-- Chưa có dữ liệu --"
            android:fontFamily="monospace"
            android:textColor="#333"
            android:textSize="12sp"/>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>